%h1 All images

.row
	%ul.list-unstyled
		-@images.each do |image|
			%li.col-md-4
				%h2=image.title
				%a{href: image.file, data: {lightbox: "gallery", title: image.title}}
					%img{src: image.file.url(:small), width: "50%"}
	
-if @auth
	%h1 Upload New Image

	%form(action="/images" method="post" enctype="multipart/form-data")
		%p
			%input(type="file" name="image[file]" id="file")
	
		%p
			%input(type="text" name="image[title]" class="form-control" placeholder="enter a title for the image")
		%p
			%h3="tag me"
		%jsuites-tags(value="None")
			:javascript
				document.querySelector('jsuites-tags').addEventListener('onblur', function() {
					console.log('Tags' + this.value);
				});
		%br
		%p
			%button(class="btn btn-primary") Upload!